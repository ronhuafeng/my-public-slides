{
  "name": "beautiful-slides",
  "version": "1.0.0",
  "description": "Beautiful presentations with reveal.js",
  "main": "index.html",
  "scripts": {
    "start": "browser-sync start --server --files \"**/*\" --port 8080",
    "build": "rm -rf dist && mkdir -p dist && cp -r *.html css images slides dist/ && mkdir -p dist/node_modules && cp -r node_modules/reveal.js dist/node_modules/ && echo 'Build completed successfully'",
    "dev": "browser-sync start --server --files \"**/*\" --port 8080"
  },
  "dependencies": {
    "reveal.js": "^5.0.4"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "http-server": "^14.1.1"
  },
  "keywords": [
    "presentation",
    "slides",
    "reveal.js"
  ],
  "author": "",
  "license": "MIT"
}
